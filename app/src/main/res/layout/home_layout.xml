<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下一页"
        android:textColor="#302D58"
        android:visibility="gone" />


    <com.transsnet.kika.custom.MyScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et1"
                android:hint="1"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et2"
                android:hint="2"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et3"
                android:hint="3"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et4"
                android:hint="4"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et5"
                android:hint="5"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <TextView
                android:id="@+id/et6"
                android:hint="6"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et7"
                android:hint="7"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et8"
                android:hint="8"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et9"
                android:hint="9"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />

            <EditText
                android:id="@+id/et10"
                android:hint="10"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_shape" />
        </LinearLayout>
    </com.transsnet.kika.custom.MyScrollView>

    <android.support.v4.view.ViewPager
        android:layout_width="500dp"
        android:layout_height="200dp" />

</LinearLayout>